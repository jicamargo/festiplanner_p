<article class="my-4 border-b-2 border-gray-300">
  <%= simple_form_for(concert) do |f| %>
    <% if f.object.errors.present? %>
      <div class="text-red-500 border-red-800 font-bold border-2 p-2 mb-2">
        <%= f.error_notification %>
        <%= f.error_notification(
              message: f.object.errors.full_messages.to_sentence
            ) %>
      </div>
    <% end %>
    <div class="grid gap-2 grid-cols-1 sm:grid-cols-6">
      <div class="col-span-2 text-xl">
        <%= f.input :start_time %>
      </div>
      <div class="col-span-4">
        <div class="name">
          <div class="text-lg font-bold">
            <%= f.input :name %>
          </div>
        </div>
        <div class="bands">
          <%= concert.bands.map(&:name).join(", ") %>
        </div>
        <div class="genres">
          <%= f.input :genre_tags %>
        </div>
        <div class="text-gray-500 font-bold">
          <%= f.association :venue %>
        </div>
        <div class="flex flex-row">
          <div class="mr-4 pr-4">
            <%= f.input :ilk, collection: Concert.ilks %>
          </div>
          <div>  
            <%= f.input :access, collection: Concert.accesses %>
          </div>
        </div>
      </div>
      <div class="col-span-2">
      </div>
      <div class="col-span-4 flex flex-row items-center justify-center sm:justify-start">
        <div>
          <%= f.button :submit %>
        </div>
        <div>
          <%= link_to(
                "Cancel",
                concert_path(concert, inline: true),
                class: "#{SimpleForm.button_class} py-2"
              ) %>
        </div>
      </div>
    </div>
  <% end %>
</article>
