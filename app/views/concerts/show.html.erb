<h1 class="text-2xl font-bold w-auto text-center md:text-4xl"><%= @concert.name %></h1>
<h2 class="text-lg font-semibold md:text-2xl">Ticket Info</h2>
<h3 class="text-lg md:text-xl">Ilk: &nbsp;<%= @concert.ilk %></h3>
<h3 class="text-lg md:text-xl">Access: &nbsp;<%= @concert.access %></h3>
<h3 class="text-lg md:text-xl">Venue: <%= @concert.venue.name %></h3>
<h3 class="text-lg md:text-xl">
  Start Date: &nbsp;
  <%= @concert.start_time.by_example("Jan 02, 2006") %>
</h3>
<% running_time = @concert.start_time %>
<table class="table border border-black rounded-lg w-full p-1">
  <caption class="text-md font-semibold bg-slate-400 text-white p-0.5 md:text-xl ">
    Schedule
  </caption>
  <thead>
    <tr class="text-sm md:text-lg">
      <th  class="border border-slate-400">Time</th>
      <th  class="border border-slate-400">Band</th>
      <th  class="border border-slate-400">Genres</th>
    </tr>
  </thead>
  <tbody>
    <% @concert.gigs.each do |gig| %>
      <tr class="text-sm md:text-lg">
        <td  class="border border-slate-400" ><%= running_time.by_example("03:04 PM") %></td>
        <td  class="border border-slate-400" ><%= gig.band.name %></td>
        <td  class="border border-slate-400" ><%= gig.band.genre_tags.split(",").join(", ")%></td> 
        <% running_time += (gig.duration_minutes * 60) %>
      </tr>
    <% end %>
  </tbody>
</table>
<h2 class="text-lg font-semibold mt-4 md:text-2xl">Tickets</h2>
<div class="concert">
  <div id="react-element"
        data-row-count="<%= @concert.venue.rows %>"
        data-seats-per-row="<%= @concert.venue.seats_per_row %>"
        data-concert-id="<%= @concert.id %>%">
  </div>
</div>
<% if current_user %>
  <div class="actions mt-4 border-t border-black pt-4 flex justify-center md:justify-start">
    <%= link_to("Edit", edit_concert_path(@concert), class: SimpleForm.button_class) %>
    <%= link_to("Back", root_path, class: SimpleForm.button_class) %>
  </div>
<% end %>
