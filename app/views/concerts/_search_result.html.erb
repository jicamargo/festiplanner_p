<article class="my-6">
  <div>
    <%= concert.start_time.by_example("Jan 2 @3:04 PM") %>
    <div class="font-bold text-lg sm:text-xl">
      <%= link_to(concert, data: {"turbo-frame": "_top"}, class: "gray-hover") do %>
        <%= highlight(concert.name, /#{query}/i) %>
      <% end %>
      
      <% if concert.sold_out? %>
        <div class="float-right font-semibold text-base sm:text-lg px-4 rounded-xl bg-red-200">
          Sold out
        </div>
      <% else %>
        <div class="float-right font-semibold text-base sm:text-lg px-4 rounded-xl bg-green-200">
          <%= pluralize(concert.unsold_ticket_count, "Tickets") %>
          Remaining
        </div>
      <% end %>
    </div>
    <div>
      <%= highlight(concert.bands.map(&:name).join(", "), /#{query}/i) %>
    </div>
    <div>
      <%= highlight(concert.genre_tags.split(",").to_sentence, /#{query}/i)  %>
    </div>
    <div>
      <%= concert.venue.name %>
    </div>
  </div>
</article>
